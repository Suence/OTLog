                        </Viewbox>
                        <TextBlock Text="关于"
                                   FontSize="16"
                                   Margin="10, 0"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </RadioButton>
            </StackPanel>

            <TextBlock Text="Version 1.0.1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Foreground="{DynamicResource SecondryText.Foreground}"
                       Margin="10"
                       FontSize="14" />
        </Grid>
        <Grid Grid.Column="1"
              Margin="40, 40, 0, 10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <ContentControl Grid.Row="1"
                            Margin="0, 20, 0, 10"
                            prism:RegionManager.RegionName="{x:Static constants:RegionNames.HomeRegion}" />
            <TextBlock x:Name="ActiveModuleName" 
                       FontSize="35"
                       Text="总览"
                       Foreground="{DynamicResource PrimaryText.Foreground}"/>
        </Grid>
    </Grid>
</UserControl>
